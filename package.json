{
  "name": "@vruse/monorepo",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@7.6.0",
  "description": "",
  "license": "MIT",
  "keywords": [],
  "main": "index.js",
  "scripts": {
    "build": "esno scripts/build.ts",
    "build:rollup": "rollup -c --bundleConfigAsCjs",
    "docs:dev": "pnpm --filter @vruse/docs docs:dev",
    "docs:build": "pnpm --filter @vruse/docs docs:build",
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:v": "vitest --mode v",
    "test:r": "vitest --mode r",
    "check": "tsc --incremental --noEmit",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "clean": "rimraf packages/vue/dist"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.35.2",
    "@esbuild-kit/esm-loader": "^2.5.5",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@types/node": "^18.14.0",
    "@types/web-bluetooth": "^0.0.16",
    "@vitest/coverage-c8": "^0.29.2",
    "@vitest/ui": "^0.29.2",
    "chalk": "^5.2.0",
    "consola": "^2.15.3",
    "cross-env": "^7.0.3",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.0",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.1.2",
    "pnpm": "^7.27.1",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "rollup": "^3.15.0",
    "rollup-plugin-dts": "^5.2.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-pure": "^0.0.2",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "vite-plugin-inspect": "^0.7.15",
    "vitest": "^0.29.2",
    "vue": "^3.2.47"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "node --loader @esbuild-kit/esm-loader ./scripts/verifyCommit.ts"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint --cache --fix",
      "prettier --parser=typescript --write"
    ]
  }
}
